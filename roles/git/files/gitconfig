[core]
  excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  precommit = diff --cached
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
  branches = branch --all
  nevermind = reset HEAD --hard

[credential]
  helper = cache --timeout=3600

