[core]
  excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  aa = add . --all
  ap = add --patch
  s = status
  ci = commit
  b = branch
  co = checkout
  df = diff
  dc = diff --cached
  f = fetch
  p = push
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lb = branch --all
  ui = !tig --all
  sync = !git fetch origin && git remote prune origin
  fts = reset HEAD --hard
  sui = !git sync && git ui

[credential]
  helper = cache --timeout=3600

